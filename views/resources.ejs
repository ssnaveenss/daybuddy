<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DayBuddy</title>
  <link rel="stylesheet" href="/styles/resources.css">
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico"/>
</head>
<body style="padding-top: 60px;">
  <%- include("partials/navbar") %>
  <h1>My Resources</h1>

  <form action="/add-resource" method="post" class="resource-form">
    <input type="text" name="name" placeholder="Resource Name" required>
    <input type="url" name="url" placeholder="https://example.com" required>
    <button type="submit">+</button>
  </form>

  <div class="resource-grid">
    <% resources.forEach(r => { %>
      <div class="resource-card">
        <a href="<%= r.url %>" target="_blank">
          <img src="https://www.google.com/s2/favicons?domain=<%= new URL(r.url).hostname %>&sz=64" alt="icon">
          <div class="name"><%= r.name %></div>
        </a>
        <form action="/delete-resource" method="post" class="delete-form">
          <input type="hidden" name="resourceId" value="<%= r.id %>">
          <button type="submit">âœ•</button>
        </form>
      </div>
    <% }) %>
  </div>
</body>
</html>
